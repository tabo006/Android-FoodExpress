<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderN"
                android:layout_width="211dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:linksClickable="false"
                android:text="name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/ncook"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="cookInfo"
                android:text="cook"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderD"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:text="description"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/orderP"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:text="price"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:translationY="1dp" />

        <EditText
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Rate your order out of 5"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="30dp"
            android:translationY="50dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un probleme? Ecrivez une plainte"
            android:textAlignment="center"
            android:translationY="130dp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:onClick="rate"
            android:text="Rate"
            android:translationX="95dp"
            android:translationY="40dp"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/complaint"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:onClick="complaint"
            android:text="plainte"
            android:textColorHighlight="@color/black"
            android:translationX="95dp"
            android:translationY="90dp"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cookInfo"
            android:text="info cuisinier"
            android:translationY="105dp"
            android:visibility="invisible"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:text="retour"
            android:translationY="170dp"
            app:cornerRadius="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>