<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplaintActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client Name :"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ClientTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cuisiner Name :"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/cuisinerTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Complaint"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/ComplaintText"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:text="complaint"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:translationY="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/biffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="dismiss"
                android:text="Rejete"
                android:translationY="25dp" />

            <Button
                android:id="@+id/suspend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="suspendre"
                android:text="suspendre"
                android:translationY="25dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="ban2days"
                android:text="2 day ban"
                android:translationY="25dp" />

        </LinearLayout>

        <Button
            android:id="@+id/retour4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="retour"
            android:text="retour"
            android:translationY="50dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>