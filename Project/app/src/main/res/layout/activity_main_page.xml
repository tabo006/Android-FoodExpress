<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_1641a66_aa15_4699_839c_667ca0781c2b"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN:"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_neutral0"
            android:textSize="24sp"
            android:translationY="50dp" />

        <Button
            android:id="@+id/btn_sign_in_clt2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="connecterClient"
            android:text="CLIENT"
            android:translationY="50dp" />

        <Button
            android:id="@+id/btn_sign_in_csn2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="connecterCuisinier"
            android:text="CUISINIER"
            android:translationY="50dp" />

        <Button
            android:id="@+id/btn_sign_in_adm2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="connecterAdministrateur"
            android:text="Administrateur"
            android:translationY="50dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OU S'INSCRIRE:"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_secondary99"
            android:textSize="24sp"
            android:translationY="150dp" />

        <Button
            android:id="@+id/btn_inscrire_csn2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="inscrireCuisinier"
            android:text="INSCRIRE COMME CUISINIER"
            android:translationY="150dp" />

        <Button
            android:id="@+id/btn_inscrire_clt2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="inscrireClient"
            android:text="INSCRIRE COMME CLIENT"
            android:translationY="150dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>